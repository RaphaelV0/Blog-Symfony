<h1>Liste des articles</h1>
<a href="{{ path('article_add') }}">Ajouter un article</a>

<ul>
    {% for article in articles %}
        <li>
        
            <a href="{{ path('article_show', {'id': article.id}) }}">
                {{ article.titre }}
            </a>
            <p>{{ article.datePublication|date('d/m/Y') }}</p>
            <p>{{ article.corps[:150] ~ '...' }}</p>
            <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
<a href="{{ path('article_delete', {'id': article.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer cet article ?');">Supprimer</a>

        </li>
    {% else %}
        <li>Aucun article disponible pour le moment.</li>
    {% endfor %}
</ul>
