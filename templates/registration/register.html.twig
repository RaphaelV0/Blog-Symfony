{% extends 'base.html.twig' %}

{% block body %}
    <h2>Inscription</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.email) }}  {# Remplacer username par email #}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.email.vars.errors %}  {# Remplacer username par email #}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form_label(form.password.first) }}
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.password.first.vars.errors %}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.password.second.vars.errors %}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            <div class="mb-3">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
